extends layout

block content
  nav(class="nav")
    h1= title
    div
      -if(_create===true)
        h3(style="display:inline; margin-right:5px") 
          a(href=`/posts/create`) create
      -if(_update===true)
        h3(style="display:inline; margin-right:5px")
          a(href=`/posts/update/${post_id}`) update
      -if(_delete===true)
        h3(style="display:inline; margin-right:5px")
          a(href=`/posts/delete/${post_id}`) delete
    p Welcome to #{title}
  main(class="index_main")
    div(class="post_div")
      -for(let i=0; i<posts.length; i++)
        article(class="border")
          header(class="post_header")
            a(href=posts[i].link)=posts[i].title
          div
            -if(posts[i].filename_image !== "")
              div
                img(src=`/post_images/${posts[i].filename_image}` width="500px")
            div(class="letter_div")
              p=posts[i].contents

