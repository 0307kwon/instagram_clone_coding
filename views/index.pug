extends layout

block content
  h1= title
  div
    -if(_create===true)
      h3(style="display:inline; margin-right:5px") 
        a(href=`/posts/create`) create
    -if(_update===true)
      h3(style="display:inline; margin-right:5px")
        a(href=`/posts/update/${post_id}`) update
    -if(_delete===true)
      h3(style="display:inline; margin-right:5px")
        a(href=`/posts/delete/${post_id}`) delete
  p Welcome to #{title}
  ul!=contents_list 
  -if(alert===true)
    script alert("작성되었습니다.");
