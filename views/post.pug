extends layout

block content
  h1= title
  div
    h3(style="display:inline; margin-right:5px") 
        a(href=`/`) back
    -if(_create===true)
      h3(style="display:inline; margin-right:5px") 
        a(href=`/posts/create`) create
    -if(_update===true)
      h3(style="display:inline; margin-right:5px")
        a(href=`/posts/update/${post_id}`) update
    -if(_delete===true)
      h3(style="display:inline; margin-right:5px")
        a(href=`/posts/delete/${post_id}`) delete
  p 
    -if(image_url !== "")
      img(src=image_url width="500px")
  p= contents
